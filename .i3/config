# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run -b -fn 'xft:envypn:pixelsize=8' -nb '#191919' -nf '#9ac0cd' -sb '#191919' -sf '#bf3f34' -p 'run >> ' 
# There also is the (new) i3-dmenu-desktop which only displays applications
