# kill focused window
bindsym $mod+Shift+q kill
bindsym $mod+f exec firefox-aurora
bindsym $mod+Shift+x exec xscreensaver-command -lock
bindsym $mod+t exec xfce4-terminal
bindsym $mod+z exec thunar
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+ unmute
bindsym XF86AudioLowerVolume exec amixer set Master 5%- unmute
